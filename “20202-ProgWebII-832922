public function listarpastas(){
$path = "arquivos/";
$exercicio = dir($path);

echo "Lista de Arquivos do diretório ".$path.;
while($arquive = $exercicio -> read()){
echo "<a href='".$path.$arquive."'>".$arquive."</a><br />";
}
$exercicio -> close();

