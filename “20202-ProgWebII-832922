<?php
     class Form
     {
         private $codigo = $_POST['codigo'];
         private $nome = $_POST['nome'];

         public function getCodigo(){
           if(is_numeric($codigo)){
             return $this->codigo;
            } 
         }
         public function setCodigo($codigo)
         {
             this->codigo = $codigo;
         }
         public function getNome(){
            if(is_string($nome)){
             return $this->nome;
            }
         }
         public function setNome()
         {
             this->nome = $nome;
         }

     }



